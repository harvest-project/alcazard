def make_ext(modname, pyxfilename):
    from distutils.extension import Extension

    ext = Extension(
        name=modname,
        sources=[pyxfilename],
        language='c++',
        extra_compile_args=[
            '-I/usr/local/Cellar/boost/1.68.0_1/include/',
            '-I/usr/local/Cellar/libtorrent-rasterbar/1.1.11/include/',
        ],
        extra_link_args=[
            '-Llibtorrent-rasterbar',
        ])
    return ext
